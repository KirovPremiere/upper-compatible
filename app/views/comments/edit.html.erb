<div class="new-comment">
  <div class="container py-5">
    <div class="row w-50 mx-auto shadow-lg bg-white bg-opacity-50">
      <div class="mt-5">
        <span class="fs-3 offset-md-1 font-monospace comment-form"><b>コメント追加</b></span>
      </div>
      <%= form_with model: @comment, url: item_comments_path, local: true do |f| %>
        <div class="form-inline">
          <%= f.label :購入時価格, class:"offset-2 col-4 mt-3" %>
          <%= f.text_field :price, autofocus: true %>円
        </div>
        
        <div class="form-inline">
          <%= f.label :満足度（０〜１００％）, class:"offset-2 col-4 mt-3" %>
          <%= f.text_field :point, autofocus: true %>%
        </div>
        
        <div class="form-inline">
          <%= f.label :写真を追加, class:"offset-2 col-4 mt-3" %>
          <%= f.attachment_field :image %>
        </div>

        <div class="form-inline">
          <%= f.label :コメント, class:"offset-2 col-4 mt-3" %>
          <%= f.text_area :opinion, rows:'5', autofocus: true, class:"mt-3" %>
        </div>

        <div class="actions offset-5 mt-4 mb-4">
          <%= f.submit "編集する", class:"btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>