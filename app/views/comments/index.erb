<div class="top-bg-center">
  <div class='container p-4'>
    <div class='row'>
      <div class='col-md-12 mx-auto text-center items-all'>
        <div class="mt-5">
          <span class="fs-3 offset-md-1 font-monospace comment-form"><b>コメント一覧</b></span>
        </div>
        <% @comments.each do |comment| %>
          <div>
            <%= comment.id %>
            <%= comment.customer.name %>
            <%= comment.opinion %>
            <%= comment.price %>
            <%= comment.point %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>