<div class="login">
  <div class="container py-5 login-form">
    <div class="row w-50 mx-auto shadow-lg bg-white bg-opacity-50">
      <div class="mt-5">
        <span class="fs-3 offset-md-1 font-monospace login-form"><b>サインイン</b></span>
      </div>
      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
        <div class="field">
          <%= f.label :ハンドルネーム, class:"offset-2 col-5 mt-3" %>
          <%= f.text_field :name, autofocus: true, placeholder:"ハンドルネーム可能" %>
        </div>

        <div class="form-inline">
          <%= f.label :メールアドレス, class:"offset-2 col-5 mt-3" %>
          <%= f.email_field :email, autofocus: true, placeholder:"sample@example.com", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :性別, class:"offset-2 col-5 mt-3" %>
          <%= f.label :男性 %>
          <%= f.radio_button :sex, :man %>
          <%= f.label :女性 %>
          <%= f.radio_button :sex, :woman %>
          <%= f.label :その他 %>
          <%= f.radio_button :sex, :others %>
        </div>

        <div class="field">
          <%= f.label :生年月日, class:"offset-2 col-5 mt-3" %>
          <%= raw sprintf(f.date_select(:birthday,
              use_month_numbers: true,
              start_year: 1900,
              end_year: (Time.now.year),
              default: Date.new(1989, 1, 1),
              date_separator: '%s'),'年 ', '月 ') + '日' %>
        </div>

        <div class="field">
          <%= f.label :パスワード（6文字以上）, class:"offset-2 col-5 mt-3" %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認用）, class:"offset-2 col-5 mt-3" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions offset-5 mt-4">
          <%= f.submit "新規登録", class:"btn btn-primary" %>
        </div>
      <% end %>

      <div class="mt-3">
        <span class="fs-6 offset-md-1">会員登録がお済みの方</span>
      </div>
      <div class="offset-2 mt-3 mb-4">
        <%= link_to "こちら", new_customer_session_path, class: "signin-link" %>　から新規登録を行ってください.
      </div>
    </div>
  </div>
</div>