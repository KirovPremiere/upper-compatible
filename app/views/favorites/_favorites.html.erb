<% if comment.favorited_by?(current_customer) %>
  <p>
    <%= link_to item_comment_favorites_path(comment), method: :delete, remote: true do %>
      ♥<%= comment.favorites.count %> いいね
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to item_comment_favorites_path(comment), method: :post, remote: true do %>
      ♡<%= comment.favorites.count %> いいね
    <% end %>
  </p>
<% end %>