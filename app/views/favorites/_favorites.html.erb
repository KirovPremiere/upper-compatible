<% if comment.favorited_by?(current_customer) %>
  <h5>
    <%= link_to item_comment_favorites_path(item.id, comment.id), method: :delete, remote: true do %>
      ♥<%= comment.favorites.count %> いいね
    <% end %>
  </h5>
<% else %>
  <h5>
    <%= link_to item_comment_favorites_path(item.id, comment.id), method: :post, remote: true do %>
      ♡<%= comment.favorites.count %> いいね
    <% end %>
  </h5>
<% end %>