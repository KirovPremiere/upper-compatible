<div class="top-bg-center">
  <div class='container p-4'>
    <div class='row'>
      <div class='col-md-12 mx-auto text-center items-all'>
        
        
        <h2 class="mt-3">対象商品一覧</h2>
        <div class="item-index d-flex flex-wrap mt-3">
          <% @items.each do |item| %>
            <div class="card m-2 p-3" style="width: 270px;">
              <%= link_to item_path(item), class: "link-style" do %>
                <div class="item-img-box2"><%= attachment_image_tag(item, :image, size:"237x158", fallback: "noimage.jpeg")%></div>
                <p class="item-index-name font-weight-bold text-dark mt-2 mb-1"><b><%= item.name %></b></p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>