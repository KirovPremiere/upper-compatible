<div class="top-bg-center">
  <div class='container p-4'>
    <div class='row'>
      <div class='col-md-12 mx-auto text-center items-all'>
        <% @big_fours.each do |big_four| %>
        <h2 class="mt-3"><% big_four.name %></h2>
        <div class="genre-index d-flex flex-wrap mt-3">
          <% @genres.each do |genre| %>
            <ul class="column">
              <%= link_to genre_path(genre), class: "link-style" do %>
                <li><b><%= genre.name %></b></li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>