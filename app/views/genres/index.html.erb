<div class="top-bg-center">
  <div class='container p-4'>
    <div class='row'>
      <div class='col-md-12 mx-auto text-center items-all'>
        <% @big_fours.each do |big_four| %>
          <h1 class="mt-3"><%= big_four.name %></h1>
          <div class="genre-index d-flex flex-wrap mt-3 mx-4 justify-content-center">
            <% big_four.genres.each do |genre| %>
              <div class="card m-2 p-3 bg-light" style="width: 270px;">
                <%= link_to genre_path(genre), class: "link-style text-decoration-none" do %>
                  <p class="item-index-name mt-0 mb-0 text-body "><%= genre.name %></p>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>