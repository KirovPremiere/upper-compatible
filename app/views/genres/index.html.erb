<div class="top-bg-center">
  <div class='container p-4'>
    <div class='row'>
      <div class='col-md-12 mx-auto text-center items-all'>
        <h2 class="mt-3">ジャンル一覧</h2>
        <div class="item-index d-flex flex-wrap mt-3">
          <% @genres.each do |genre| %>
            <div class="card m-2 p-3" style="width: 270px;">
              <%= link_to genre_path(genre), class: "link-style" do %>
                <p class="item-index-name font-weight-bold text-dark mt-2 mb-1"><b><%= genre.name %></b></p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>