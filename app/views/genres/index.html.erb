<div class="top-bg-center">
  <div class='container p-4'>
    <div class='row'>
      <div class='col-md-12 mx-auto text-center items-all'>
        <% @big_fours.each do |big_four| %>
        <h1 class="mt-3"><%= big_four.name %></h1>
        <div class="genre-index d-flex flex-wrap mt-3 mx-4">
          <% big_four.genres.each do |genre| %>
            <ul class="">
              <li>
              <%= link_to genre_path(genre), class: "link-style" do %>
                <b><%= genre.name %></b>
              <% end %>
              </li>
            </ul>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>