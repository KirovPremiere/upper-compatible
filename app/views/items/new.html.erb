<div class="new-item">
  <div class="container py-5">
    <div class="row w-50 mx-auto shadow-lg bg-white bg-opacity-50">
      <div class="mt-5">
        <span class="fs-3 offset-md-1 font-monospace login-form"><b>新規商品追加</b></span>
      </div>
      <%= form_with model: @item, url: items_path, local: true do |f| %>
        <div class="form-inline">
          <%= f.label :商品名, class:"offset-2 col-4 mt-3" %>
          <%= f.text_field :name, autofocus: true, placeholder:"商品名を入力してください" %>
        </div>
        
        <div class="row mt-3">
          <%= f.label :genre_id, "ジャンル", class:"offset-1 col-3" %>
          <%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] }, {include_blank:'--選択してください--'}, class:"col-3" %>
        </div>
        
        <div class="form-inline">
          <%= f.label :商品写真を追加, class:"offset-2 col-4 mt-3" %>
          <%= f.attachment_field :image %>
        </div>

        <div class="form-inline">
          <%= f.label :商品紹介, class:"offset-2 col-4 mt-3" %>
          <%= f.text_area :introduction, rows:'5', autofocus: true, placeholder: "商品紹介文を記入してください", class:"mt-3" %>
        </div>

        <div class="actions offset-5 mt-4 mb-4">
          <%= f.submit "商品を新規投稿する", class:"btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>